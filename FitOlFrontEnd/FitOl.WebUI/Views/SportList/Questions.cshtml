@model QuestionSportModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section NormalLayout{
    <div class="main-w3pvt mian-content-wthree text-center" id="home">
        <div class="container">
            <br />
            <br />
            <br />
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post" asp-action="QuestionsResult">
                        <div class="form-group">
                            <label asp-for="Bolge" class="control-label"></label>
                            <select asp-for="Bolge" class="form-control" style="width:200px;">
                                <option selected value="">-- Hangi Bölgeleri Çalışmak İstersiniz --</option>
                                <option value="1">Full Body</option>
                                <option value="2">Karın</option>
                                <option value="3">Omuz</option>
                                <option value="4">Bacak</option>
                            </select>
                            <span asp-validation-for="Bolge" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Haraket" class="control-label"></label>
                            <select asp-for="Haraket" class="form-control" style="width:200px;">
                                <option selected value="0">-- Haraket Alanınızı Seçiniz --</option>
                                <option value="1">Zayıflama</option>
                                <option value="2">Koruma</option>
                                <option value="3">Geliştirme</option>
                            </select>
                            <span asp-validation-for="Haraket" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-info">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}



