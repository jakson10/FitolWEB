@model List<AssignMovementModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="AssingMovement" method="POST">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].MovementName">
            <input type="hidden" asp-for="@Model[i].MovementId">

            <input asp-for="@Model[i].Exists" class="form-check-input" type="checkbox">
            <label asp-for="@Model[i].Exists" class="form-check-label">@Model[i].MovementName</label>
        </div>
    }
    <button type="submit" class="btn btn-primary btn-sm">Kaydet</button>
</form>