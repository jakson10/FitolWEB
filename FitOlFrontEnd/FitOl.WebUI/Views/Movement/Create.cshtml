@model MovementAddModel

@{
    ViewData["Title"] = "Hareket Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section NormalLayout{

    <div class="main-w3pvt mian-content-wthree text-center" id="home">
        <div class="container">
            <br />
            <br />  <br />
            <h3>Hareket ekleme sayfası</h3>

            <h6>Ekleyeceğiniz hareket için gerekli alanları doldurunuz.</h6>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post" asp-action="Create" class="p-3" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="MovementName" class="control-label">Hareket İsmi</label>
                            <input asp-for="MovementName" class="form-control" />
                            <span asp-validation-for="MovementName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MovementDescription" class="control-label">Hareket Açıklama</label>
                            <input asp-for="MovementDescription" class="form-control" />
                            <span asp-validation-for="MovementDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EnumMovementType" class="control-label">Hareket Bölgesi</label>
                            <select asp-for="EnumMovementType" class="form-control" style="width:200px;">
                                <option value="0">Göğüs </option>
                                <option value="1">Sırt</option>
                                <option value="2">Omuz </option>
                                <option value="3">Ön Kol</option>
                                <option value="4">Arka Kol </option>
                                <option value="5">Bacak </option>
                                <option value="6">Kardiyo</option>
                                <option value="7">Karın</option>
                            </select>
                            <span asp-validation-for="EnumMovementType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Image"></label>
                            <input class="form-control-file" type="file" asp-for="Image">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-info">Kaydet</button>
                        </div>
                        <div>
                            <a asp-controller="Movement" asp-action="Index" class="btn btn-warning">Hareket Listesi</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


}
