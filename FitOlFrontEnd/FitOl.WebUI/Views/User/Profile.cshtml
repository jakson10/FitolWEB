@model ProfileInfoViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Profil";
}
@section Classlar{
    <link href="~/profile/civic/img/favicon.ico" rel="shortcut icon" />
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:400,400i,600,600i,700" rel="stylesheet">
    <link href="~/profile/civic/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/profile/civic/css/flaticon.css" rel="stylesheet" />
    <link href="~/profile/civic/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/profile/civic/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/profile/civic/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/profile/civic/css/style.css" rel="stylesheet" />
}
<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

<div class="home-four-style">
    <!-- Header section start -->
    <header class="header-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <div class="site-logo">
                        <h2>@User.Identity.Name.ToUpper()</h2>

                    </div>
                </div>

            </div>
        </div>
    </header>

    <!-- Header section end -->
    <br />
    <br />
    <br />
    <div class="card-body" style="background-color:white">
        <div class="table-responsive">
            <table class="table table-bordered" id="besinListeTablosu" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <label>Kaloriniz</label>
                        </th>
                        <th>
                            <label>Yaşınız</label>
                        </th>
                        <th>
                            <label>Yağ Oranınız</label>
                        </th>
                        <th>
                            <label>Boyunuz </label>
                        </th>
                        <th>
                            <label>Kilonuz </label>
                        </th>
                        <th>
                            <label>Mailiniz </label>
                        </th>
                        <th>
                            <label>Fotoğraf </label>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            @Model.Calorie
                        </td>
                        <td>
                            @Model.Age
                        </td>
                        <td>
                            @Model.FatRate
                        </td>
                        <td>
                            @Model.Height
                        </td>
                        <td>
                            @Model.Weight
                        </td>
                        <td>
                            @Model.Email
                        </td>
                        <td>
                            <getuserimage id="Model.Id" user-name="@User.Identity.Name"></getuserimage>
                        </td>
                        <td></td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>

    <div class="container-fluid p-0">
        <div class="row m-0">
            <div class="col-xl-5 col-lg-5 p-0">
                <div class="main-left-area h-100">
                    <section class="intro-section">
                        <figure class="hero-image">
                            <img src="~/profile/civic/img/hero-3.jpg" alt="">
                        </figure>

                        @*<div class="hero-info pt-5">
                                <h2>Bilgileriniz</h2>
                                <ul>
                                    <li><span>Kaloriniz : </span>@Model.Calorie</li>
                                    <li><span>Yaşınız : </span>@Model.Age</li>
                                    <li><span>Yağ Oranınız : </span>@Model.FatRate</li>
                                    <li><span>Boyunuz : </span>@Model.Height</li>
                                    <li><span>Kilonuz : </span>@Model.Weight</li>
                                    <li><span>E-Mailiniz : </span>@Model.Email</li>

                                </ul>

                            </div>*@

                        @*<div class="col-xl-6 col-lg-7">
                                <div class="main-right-area">

                                    <label class="hero-info pt-1">Meyve ve sebze vücudun en büyük sağlık deposudur.</label>
                                    <br />
                                    <br />
                                    <br />
                                    <img src="~/startbootstrap-sb-admin-2-gh-pages/img/ef5b6df424a26883234ecfe857a85781.jpg" />
                                     buraya ne istersen o gelicek


                                </div>
                            </div>*@
                    </section>

                </div>
            </div>

        </div>
    </div>
</div>



