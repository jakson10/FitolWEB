@model QuestionModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section NormalLayout{
    <div class="main-w3pvt mian-content-wthree text-center" id="home">
        <div class="container">
            <br />
            <br />
            <br />
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post" asp-action="QuestionsResult">
                        <div class="form-group">
                            <label asp-for="Vejeteryan" class="control-label"></label>
                            <select asp-for="Vejeteryan" class="form-control" style="width:200px;">
                                <option selected value="">-- Vejeteryan mısınız --</option>
                                <option value="1">Evet</option>
                                <option value="2">Hayır</option>
                            </select>
                            <span asp-validation-for="Vejeteryan" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BesinDegeri" class="control-label"></label>
                            <select asp-for="BesinDegeri" class="form-control" style="width:200px;">
                                <option selected value="">-- Besin Değerinizi Seçin --</option>
                                <option value="1">Düşük Besin Değeri</option>
                                <option value="2">Orta Besin Değeri</option>
                                <option value="3">Yüksek Besin Değeri</option>
                            </select>
                            <span asp-validation-for="BesinDegeri" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-info">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

